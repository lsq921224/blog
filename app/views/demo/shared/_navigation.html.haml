%nav{ class: 'nav nav-tabs mr-auto', role: 'tablist'}
  - Spina::Page.live.in_menu.sorted.each do |page|
    %li{ class: 'nav-item' }= link_to page.menu_title, page.materialized_path, class: "nav-link #{'active' if page == current_page || Spina::Page.children_of(page).include?(current_page)}"
  %p{ class: 'ml-auto' }
    - if user_signed_in?
      %li{ class: 'nav-item' }= link_to 'Edit profile', edit_user_registration_path, class: 'nav-link'
      %li{ class: 'nav-item' }= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link'
    - else
      %li{ class: 'nav-item' }= link_to 'Sign up', new_user_registration_path, class: 'nav-link'
      %li{ class: 'nav-item' }= link_to 'Login', new_user_session_path, class: 'nav-link'
